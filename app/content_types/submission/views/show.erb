<div class="post">
  <h2 class="post-title">
    <a href="/<%= content.slug %>" title="<%= content.title %>"><%= content.title %></a>
  </h2>

  <p class="byline">
    <span class="time"><%= content.created_at.strftime('%B %d, %Y') %></span>
    <span class="author"><a href="/user/<%= content.user.id %>" title="<%= content.user.display_name %>'s page"><%= content.user.display_name %></a></span> 
  </p>

  <div class="entry">
    <p>
      Thank you. Your reading of '<%=h content.title %>' has been accepted. We'll review and get back to you.
    </p>
    <p>
      <span class="mp3">/content/download/<%= content.content['file'] %></span>
    </p>
    <script type="text/javascript">
      $(".mp3").jmp3({
            showfilename: "false",
            backcolor: "333333",
            width: 200,
            showdownload: "true"
          });
    </script>
  </div>

  <div class="post-meta-data">
    <!-- 
  <span class="categories">Categories: <a href="http://themehybrid.com/demo/bliss/?cat=5" title="View all posts in General" rel="category">General</a></span>
  <span class="tags">Tags: <a href="http://themehybrid.com/demo/bliss/?tag=example" rel="tag">Example</a>, <a href="http://themehybrid.com/demo/bliss/?tag=example-post" rel="tag">example post</a></span>
    -->
  </div>
</div>
